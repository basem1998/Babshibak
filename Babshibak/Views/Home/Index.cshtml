@model IEnumerable<Babshibak.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>



<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-4" style="margin-bottom:20px">
                <div class="panel panel-default text-center">
                    <div class="panel-heading">
                        <h1>@Html.DisplayFor(modelItem => item.Name)</h1>
                    </div>
                    <div class="panel-body">
                        <a href="@Url.Action("Details","Products",new {id= item.Id})">
                            <img class="thumbnail" style="width:100%;    height: 280px;" src="~/Uploads/@item.Image" />
                        </a>
                       
                    </div>
                    <div class="panel-footer">
                        <h3>@Html.DisplayFor(modelItem => item.Price) <span style="color:yellowgreen;">EGP</span></h3>
                        @Html.ActionLink("More Details", "Details", "Products", new { id = item.Id }, new { @class = "btn btn-info", @style = "width:300px;background-color:lightsteelblue;color:black;font-weight:bold;" })
                    </div>
                </div>
            </div>

        }

    </div>
</div>



   
